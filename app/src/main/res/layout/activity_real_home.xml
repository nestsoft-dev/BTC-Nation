<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    tools:context=".RealHomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:cardCornerRadius="15dp"
               android:layout_margin="10dp"
               app:cardBackgroundColor="@color/background_tint"
               app:cardElevation="3dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/background_tint"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:textSize="25sp"
                       android:layout_marginTop="10dp"
                       android:text="Hi,Ikenna"
                       android:id="@+id/userName"
                       android:layout_marginStart="15dp"
                       android:fontFamily="@font/squre"/>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:textSize="18sp"
                       android:layout_marginTop="10dp"
                       android:text="Available Balance"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_marginStart="15dp" />

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:textSize="35sp"
                       android:layout_marginTop="10dp"
                       android:text=""
                       android:id="@+id/balance"
                       android:textStyle="bold"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:layout_marginBottom="25dp"
                       android:layout_marginStart="15dp" />

               </LinearLayout>
           </androidx.cardview.widget.CardView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="180dp">

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:orientation="horizontal"
                android:layout_weight="3">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/background_tint">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_baseline_today_24"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Daily \nReward"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:fontFamily="@font/squre"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/background_tint">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/video"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Video \n Reward"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:fontFamily="@font/squre"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:id="@+id/gameCard"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/background_tint">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/games"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Games \nReward"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:fontFamily="@font/squre"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_weight="3">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/background_tint">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_baseline_control_point_duplicate_24"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Simple \nPoints"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:fontFamily="@font/squre"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/background_tint">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/wallet"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Withdraw \nReward"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:fontFamily="@font/squre"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="15dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/background_tint">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/policy"
                            android:layout_gravity="center"
                            android:layout_marginTop="30dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Policy"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:fontFamily="@font/squre"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>